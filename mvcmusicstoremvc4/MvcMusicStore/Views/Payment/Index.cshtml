@model MvcMusicStore.Models.VisaPayment

@{
    ViewBag.Title = "Visa payment";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Visa", "Payment")) {
    
    <h2>Payment</h2>
    <fieldset>
        <legend>Visa payment information for order @ViewBag.OrderId of cost @ViewBag.Amount</legend>

        @Html.EditorForModel()
        @Html.Hidden("OrderId", (string)ViewBag.OrderId)
        @Html.Hidden("Amount", (string)ViewBag.Amount)
    </fieldset>
    <input type="submit" value="Confirm entire order" />
}